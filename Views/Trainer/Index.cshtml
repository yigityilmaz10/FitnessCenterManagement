@model IEnumerable<FitnessCenterManagement.Models.Trainer>
@{
    ViewData["Title"] = "Antrenörler";
}

<div class="container">

    <!-- SAYFA BAŞLIĞI + BUTON -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">🏋️ Antrenörler</h2>

        <a asp-action="Create" class="btn btn-primary btn-lg">
            ➕ Yeni Antrenör
        </a>
    </div>

    <!-- KART + TABLO -->
    <div class="card card-soft">
        <div class="card-body p-0">

            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Ad Soyad</th>
                        <th>Uzmanlık (Hizmet)</th>
                        <th>Müsait Saatler</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>

                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                Henüz antrenör eklenmemiş.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-semibold">
                                    @item.FullName
                                </td>
                                <td>
                                    <span class="badge bg-info text-dark">
                                        @item.Service.Name
                                    </span>
                                </td>
                                <td>
                                    @item.AvailableHours
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary me-2">
                                        ✏️ Düzenle
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-danger">
                                        🗑️ Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>

        </div>
    </div>

</div>
