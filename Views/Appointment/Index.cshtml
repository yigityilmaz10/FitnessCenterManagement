@model IEnumerable<FitnessCenterManagement.Models.Appointment>
@{
    ViewData["Title"] = "Tüm Randevular";
}

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">📋 Tüm Randevular</h2>
    </div>

    <div class="card card-soft">
        <div class="card-body p-0">

            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Üye</th>
                        <th>Antrenör</th>
                        <th>Hizmet</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th class="text-end pe-4">İşlem</th>
                    </tr>
                </thead>

                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                Henüz randevu bulunmamaktadır.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-muted">
                                    @item.UserId
                                </td>
                                <td class="fw-semibold">
                                    @item.Trainer.FullName
                                </td>
                                <td>
                                    @item.Service.Name
                                </td>
                                <td>
                                    @item.AppointmentDate.ToString("dd.MM.yyyy HH:mm")
                                </td>
                                <td>
                                    @if (item.IsApproved)
                                    {
                                        <span class="badge bg-success">
                                            ✔ Onaylandı
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            ⏳ Beklemede
                                        </span>
                                    }
                                </td>
                                <td class="text-end pe-4">

                                    @if (!item.IsApproved)
                                    {
                                        <form asp-action="Approve"
                                              asp-route-id="@item.Id"
                                              method="post"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button class="btn btn-sm btn-success me-2">
                                                ✔ Onayla
                                            </button>
                                        </form>

                                        <form asp-action="Reject"
                                              asp-route-id="@item.Id"
                                              method="post"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button class="btn btn-sm btn-outline-danger">
                                                ✖ Reddet
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">
                                            İşlem tamamlandı
                                        </span>
                                    }

                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>

        </div>
    </div>

</div>
