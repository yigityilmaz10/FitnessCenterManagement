@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Abidin Fitness</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessCenterManagement.styles.css" asp-append-version="true" />

    <style>
        .navbar-brand:hover {
            transform: scale(1.05);
            transition: 0.2s ease;
        }
    </style>
</head>
<body class="bg-light">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm custom-navbar">

            <div class="container-fluid">

                <!-- LOGO / BRAND -->
                <a class="navbar-brand fw-bold d-flex align-items-center"
                   asp-controller="Home" asp-action="Index">
                    🐱💪 <span class="ms-2">ABİDİN FITNESS</span>
                </a>

                <!-- TOGGLER -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- NAVBAR -->
                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- SOL MENÜ -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                🏠 Ana Sayfa
                            </a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointment" asp-action="Create">
                                    ➕ Randevu Al
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointment" asp-action="MyAppointments">
                                    📅 Randevularım
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-warning fw-semibold"
                                   asp-controller="AI" asp-action="Index">
                                    🤖 AI Öneri <span class="badge bg-warning text-dark ms-1">🐾</span>
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-warning fw-semibold"
                                   href="#"
                                   role="button"
                                   data-bs-toggle="dropdown">
                                    ⚙️ Admin
                                </a>

                                <ul class="dropdown-menu dropdown-menu-dark shadow">

                                  
                                    <li>
                                        <a class="dropdown-item fw-semibold"
                                           asp-controller="Admin"
                                           asp-action="Dashboard">
                                            📊 Dashboard
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Trainer"
                                           asp-action="Index">
                                            🏋️ Antrenörler
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Services"
                                           asp-action="Index">
                                            🧾 Hizmetler
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Appointment"
                                           asp-action="Index">
                                            📋 Tüm Randevular
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }


                    </ul>

                    <!-- SAĞ MENÜ (KULLANICI) -->
                    <ul class="navbar-nav ms-auto align-items-center">
                        <partial name="_LoginPartial" />
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- CONTENT -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            🐾 © 2025 - Abidin Fitness | Kedilerle Güçlen 💪
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
