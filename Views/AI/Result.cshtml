@model FitnessCenterManagement.Models.AIExerciseRequest
@{
    ViewData["Title"] = "AI Önerisi";
}

<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark text-center fw-bold">
                    🤖 Yapay Zekâ Egzersiz Önerisi
                </div>

                <div class="card-body">

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="alert alert-light text-center">
                                <strong>Boy</strong><br />
                                @Model.Height cm
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="alert alert-light text-center">
                                <strong>Kilo</strong><br />
                                @Model.Weight kg
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="alert alert-light text-center">
                                <strong>Hedef</strong><br />
                                @Model.Goal
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="alert alert-info text-center fs-5">
                        <strong>Önerilen Program</strong><br /><br />
                        @ViewBag.Recommendation
                    </div>

                </div>

                <div class="card-footer text-center bg-light">
                    <a asp-action="Index" class="btn btn-primary">
                        🔁 Yeni Öneri Al
                    </a>
                </div>
            </div>

        </div>
    </div>

</div>
