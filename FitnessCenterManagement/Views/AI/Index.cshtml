@model FitnessCenterManagement.Models.AIExerciseRequest

<h2>AI Egzersiz Önerisi</h2>

<form asp-action="Result" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="form-group">
        <label>Boy (cm)</label>
        <input asp-for="Height" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Kilo (kg)</label>
        <input asp-for="Weight" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Hedef</label>
        <input asp-for="Goal" class="form-control"
               placeholder="kilo verme / kas yapma" />
    </div>

    <button class="btn btn-success mt-3">Öneri Al</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
