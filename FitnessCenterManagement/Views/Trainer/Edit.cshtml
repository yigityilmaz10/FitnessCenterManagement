@model FitnessCenterManagement.Models.Trainer

<h2>Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Ad Soyad</label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Uzmanlık</label>
        <input asp-for="Specialty" class="form-control" />
    </div>
    <div class="form-group">
        <label>Müsait Saatler</label>
        <input asp-for="AvailableHours" class="form-control" />
    </div>
    <button class="btn btn-primary mt-2">Güncelle</button>
</form>
