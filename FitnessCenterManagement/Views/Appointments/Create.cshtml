@model FitnessCenterManagement.Models.Appointment

@{
    ViewData["Title"] = "Yeni Randevu Al";
}

<div class="container mt-4">
    <h1>Yeni Randevu Al</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="TrainerId" class="control-label">Antrenör Seçiniz</label>
                    <select asp-for="TrainerId" class="form-control" asp-items="ViewBag.TrainerId"></select>
                    <span asp-validation-for="TrainerId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ServiceId" class="control-label">Hizmet Seçiniz</label>
                    <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AppointmentDate" class="control-label">Randevu Tarih ve Saati</label>
                    {{-- Randevu saati için hem tarih hem saat seçmeyi sağlayan DateTime-Local tipi kullanılıyor --}}
                    <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                    <small class="form-text text-muted">Randevunuz varsayılan olarak 60 dakikalık kabul edilir. Onay için e-posta beklemeniz gerekmektedir.</small>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Randevu Oluştur" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Randevularıma Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}