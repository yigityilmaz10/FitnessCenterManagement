@model FitnessCenterManagement.Models.Appointment

@{
    ViewData["Title"] = "Randevu Düzenle";
}

<div class="container mt-4">
    <h1>Randevu Düzenle</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="MemberId" /> {{-- Üye ID'si değişmeyeceği için gizli tutuyoruz --}}
                <input type="hidden" asp-for="IsApproved" /> {{-- Onay durumunu Admin panelinde değiştirmek daha uygun --}}

                <div class="form-group mb-3">
                    <label asp-for="TrainerId" class="control-label">Antrenör Seçiniz</label>
                    <select asp-for="TrainerId" class="form-control" asp-items="ViewBag.TrainerId"></select>
                    <span asp-validation-for="TrainerId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ServiceId" class="control-label">Hizmet Seçiniz</label>
                    <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AppointmentDate" class="control-label">Randevu Tarih ve Saati</label>
                    <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}