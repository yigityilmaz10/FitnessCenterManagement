@model FitnessCenterManagement.Models.Gym

@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<div class="container mt-4">
    <h1>Yeni Spor Salonu Tanımla</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                {{-- Bu etiket, Model'deki hataları toplu gösterir --}}
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    {{-- İstemci tarafı doğrulama mesajını gösterir --}}
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="WorkingHours" class="control-label"></label>
                    <input asp-for="WorkingHours" class="form-control" />
                    <span asp-validation-for="WorkingHours" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
        {{-- Client-side Validation için gerekli partial dosyası. --}}
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}