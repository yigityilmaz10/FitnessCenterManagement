@model FitnessCenterManagement.Models.Gym

@{
    ViewData["Title"] = "Salon Silme Onayı";
}

<div class="container mt-4">
    <h1 class="text-danger">Spor Salonunu Sil</h1>

    <h3>Bu salonu silmek istediğinizden emin misiniz? Bu işlem, ilişkili antrenörleri ve hizmetleri etkileyebilir.</h3>
    <hr />

    <dl class="row alert alert-light border border-danger">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            <strong>@Html.DisplayFor(model => model.Name)</strong>
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Salonu Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div>