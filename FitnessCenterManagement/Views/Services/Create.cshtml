@model FitnessCenterManagement.Models.Service

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="container mt-4">
    <h1>Yeni Hizmet Tanımla</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Örn: Yoga Dersi, Kilo Verme Programı" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Duration" class="control-label">Süre (Dakika)</label>
                    <input asp-for="Duration" class="form-control" type="number" min="15" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Price" class="control-label">Ücret (₺)</label>
                    {{-- Decimal türündeki fiyat için number tipi kullanıyoruz --}}
                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="GymId" class="control-label">Hizmetin Verildiği Spor Salonu</label>
                    {{-- ViewData'dan gelen salonları dropdown olarak gösterir --}}
                    <select asp-for="GymId" class="form-control" asp-items="ViewBag.GymId"></select>
                    <span asp-validation-for="GymId" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}