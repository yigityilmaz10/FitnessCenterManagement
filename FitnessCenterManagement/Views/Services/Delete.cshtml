@model FitnessCenterManagement.Models.Service

@{
    ViewData["Title"] = "Hizmet Silme Onayı";
}

<div class="container mt-4">
    <h1 class="text-danger">Hizmeti Sil</h1>

    <h3>Bu hizmeti silmek istediğinizden emin misiniz? Bu işlem, bu hizmete ait randevuları etkileyebilir.</h3>
    <hr />

    <dl class="row alert alert-light border border-danger">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            <strong>@Html.DisplayFor(model => model.Name)</strong>
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-9">
            @string.Format("{0:C}", Model.Price)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Gym)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Gym.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Hizmeti Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div>