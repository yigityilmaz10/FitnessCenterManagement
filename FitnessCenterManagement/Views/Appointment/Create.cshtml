@model FitnessCenterManagement.Models.Appointment

<h2>Randevu Al</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="form-group">
        <label>Antrenör</label>
        <select asp-for="TrainerId" asp-items="ViewBag.Trainers" class="form-control">
            <option value="">Seçiniz</option>
        </select>
    </div>

    <div class="form-group mt-2">
        <label>Hizmet</label>
        <select asp-for="ServiceId" asp-items="ViewBag.Services" class="form-control">
            <option value="">Seçiniz</option>
        </select>
    </div>

    <div class="form-group mt-2">
        <label>Tarih & Saat</label>
        <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
    </div>

    <button class="btn btn-primary mt-3">Randevu Al</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
