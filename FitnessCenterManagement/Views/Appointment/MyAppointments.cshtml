@model IEnumerable<FitnessCenterManagement.Models.Appointment>
@{
    ViewData["Title"] = "Randevularım";
}

<div class="container">

    <!-- BAŞLIK + CTA -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title mb-0">📅 Randevularım</h2>
            <small class="text-muted">
                Oluşturduğun ve durumunu takip edebileceğin randevular
            </small>
        </div>

        <a asp-action="Create" class="btn btn-primary btn-lg">
            ➕ Yeni Randevu
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">

            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Antrenör</th>
                        <th>Hizmet</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                    </tr>
                </thead>

                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                📭 Henüz randevunuz bulunmamaktadır
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-semibold">
                                    👤 @item.Trainer.FullName
                                </td>
                                <td>
                                    🧾 @item.Service.Name
                                </td>
                                <td>
                                    ⏰ @item.AppointmentDate.ToString("dd.MM.yyyy HH:mm")
                                </td>
                                <td>
                                    @if (item.IsApproved)
                                    {
                                        <span class="badge bg-success fs-6">
                                            ✔ Onaylandı
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark fs-6">
                                            ⏳ Beklemede
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>

        </div>
    </div>

</div>
