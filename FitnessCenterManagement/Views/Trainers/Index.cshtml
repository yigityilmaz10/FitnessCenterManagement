@model IEnumerable<FitnessCenterManagement.Models.Trainer>

@{
    ViewData["Title"] = "Antrenör Yönetimi";
}

<div class="container mt-4">
    <h1 class="mb-4">Antrenör Yönetimi (Admin)</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Antrenör Ekle</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Expertise)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AvailableHours)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gym) {{-- İlişkili Salon Adı --}}
                </th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        {{-- Antrenörün uzmanlık alanları (örn: kas geliştirme) --}}
                        @Html.DisplayFor(modelItem => item.Expertise)
                    </td>
                    <td>
                        {{-- Antrenörün müsaitlik saatleri --}}
                        @Html.DisplayFor(modelItem => item.AvailableHours)
                    </td>
                    <td>
                        {{-- İlişkili Gym nesnesinden Name alanını gösterir --}}
                        @Html.DisplayFor(modelItem => item.Gym.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>